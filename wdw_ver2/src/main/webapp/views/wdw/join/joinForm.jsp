	}
	
	$(document).ready(function(){
		$('#id-success').hide();
		$("#id-fail").hide();

		$('#btnCheckEmail').click(function(){
			$.ajax({
				url : '/ajax/ajaxJoin/idChk',
				type : 'post',
				dataType : 'json',
				data : {
					"id" : $("#mem-id").val()
				},
				success: function(data){
					if(data[0].result != 1){
						$("#mem-id").val("");
						$("#mem-id").focus();
						$("#id-success").hide();
						$("#id-fail").show();
					}else{
						$("#id-success").show();
						$("#id-fail").hide();
					}
				},
				error: function(){
					console.log("실패");
				}
			})
		})
		
		$('#pwErr').hide();

		$("#mem-pw").focusout(function(){
			var memPw = $("#mem-pw").val();
			if(!/^[a-zA-Z0-9!@#$%^&*+=-]{8,}$/.test(memPw)){
				$("#pwErr").show();
			}else{
				$('#pwErr').hide();
			}
		})
		
		$('#alert-success').hide();
		$("#alert-fail").hide();

		$("#mem-pw-chk").focusout(function(){
			var memPw = $("#mem-pw").val();
			var memPwChk = $("#mem-pw-chk").val();
			if(memPw != "" || memPwChk != ""){
				if(memPw == memPwChk){
					$('#alert-success').show();
					$("#alert-fail").hide();
					$("#submit").removeAttr("disabled");
				}else{
					$('#alert-success').hide();
					$("#alert-fail").show();
					$("#submit").attr("disabled", "disabled");
				}
			}
		});
	})
	
</script>

